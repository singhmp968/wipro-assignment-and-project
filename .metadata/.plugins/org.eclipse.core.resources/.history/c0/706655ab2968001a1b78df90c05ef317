package Assignment2;

import java.util.Scanner;

public class MainClass {
public static void main(String args[]) {
	Scanner s=new Scanner(System.in);
	int rollno=0;
	do {
	System.out.println("Eneter the Roll Number");
	 rollno = s.nextInt();
	String str="";
	str+=rollno;
	if(str.length()!=4) {
		System.out.print("Eneter at least 4 character");
		rollno = 0;
	}
	}while(rollno== 0);
}
}
